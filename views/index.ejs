<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/master.css">
    <title>Euro 2020 Sweepstakes Leaderboard</title>
  </head>
  <h1>Euro 2020 Sweepstakes Leaderboard</h1>
  <h2>Top prize: <i>â‚¬60</i>, winner take all</h2>
  <body>
<% for (i = 0;i < players.length; i++) { %>
    <table class='position' style="width:100%; text-align: center">

      <colgroup>
        <col span='1' style='width: 5%'>
        <col span='1' style='width: 20%'>
        <col span='1' style='width: 15%'>
        <col span='1' style='width: 5%'>
        <col span='1' style='width: 20%'>
        <col span='1' style='width: 10%'>
        <col span='1' style='width: 10%'>
        <col span='1' style='width: 15%'>
      </colgroup>

  <tr>
    <th><%=i + 1%></th>
    <th><%=players[i].name%></th>
    <th>Teams</th>
    <th></th>
    <th>Odds</th>
    <th>T2</th>
    <th>R16</th>
    <!-- <th>Points</th> -->
    <th>Total
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%=players[i].teams[0]%></td>
    <td><img class='thumbnail' src='<%=players[i].teamFlag[0]%>'></td>
    <td><%=players[i].teamOdds[0]%></td>
    <td><% if (players[i].teamRanks[0] === 1 || players[i].teamRanks[0] === 2) {%>
          <%=players[i].teamOdds[0] * (1/3) %>
          <% } else { %>
            <%=players[i].teamOdds[0] * (0) %>
          <% } %>
    </td>
    <td><%=players[i].r16Points[0]%></td>
    <!-- <td>50</td> -->
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%=players[i].teams[1]%></td>
    <td><img class='thumbnail' src='<%=players[i].teamFlag[1]%>'></td>
    <td><%=players[i].teamOdds[1]%></td>
    <td><% if (players[i].teamRanks[1] === 1 || players[i].teamRanks[1] === 2) {%>
          <%=players[i].teamOdds[1] * (1/3) %>
          <% } else { %>
            <%=players[i].teamOdds[1] * (0) %>
          <% } %>
    </td>
    <td><%=players[i].r16Points[1]%></td>
    <!-- <td>50</td> -->
    <td class='total'><%=players[i].playerPoints%></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%=players[i].teams[2]%></td>
    <td><img class='thumbnail' src='<%=players[i].teamFlag[2]%>'></td>
    <td><%=players[i].teamOdds[2]%></td>
    <td><% if (players[i].teamRanks[2] === 1 || players[i].teamRanks[2] === 2) {%>
          <%=players[i].teamOdds[2] * (1/3) %>
          <% } else { %>
            <%=players[i].teamOdds[2] * (0) %>
          <% } %>
    </td>
    <td><%=players[i].r16Points[2]%></td>
    <!-- <td>50</td> -->
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%=players[i].teams[3]%></td>
    <td><img class='thumbnail' src='<%=players[i].teamFlag[3]%>'></td>
    <td><%=players[i].teamOdds[3]%></td>
    <td><% if (players[i].teamRanks[3] === 1 || players[i].teamRanks[3] === 2) {%>
          <%=players[i].teamOdds[3] * (1/3) %>
          <% } else { %>
            <%=players[i].teamOdds[3] * (0) %>
          <% } %>
    </td>
    <td><%=players[i].r16Points[3]%></td>
    <!-- <td>50</td> -->
  </tr>
</table>
<% } %>

<img src='images/r16.png'
</body>
</html>
